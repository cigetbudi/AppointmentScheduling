@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signInManager
@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutform" asp-action="Logoff" asp-controller="Account">
        <ul class="nav nav-bar">
            <li class="text-white nav-link">Halo,@User.Identity.Name :)</li>
            <li><a class="text-white nav-link" href="javascript:document.getElementById('logoutform').submit()">Keluar</a></li>
        </ul>
    </form>

}
else
{
<ul class="nav navbar-nav">
    <li class="nav-item">
    @*@Html.ActionLink("Daftar", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })*@
        <a class="nav-link text-white" id="registerLink" asp-controller="Account" asp-action="Register">Daftar</a>
    </li>
    <li>
        <a class="nav-link text-white" id="loginLink" asp-controller="Account" asp-action="Login">Masuk</a>
        @*@Html.ActionLink("Masuk", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })*@
    </li>
</ul>
				
}